<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <table class="table table-striped unit-listing">
        <thead>
        <tr>
          <th>Stock Number</th>
          <th>Unit</th>
          <th>MSRP</th>
          <th>Discount</th>
          <th>Sale Price</th>
          <th></th>
          <th></th>
        </tr>
        </thead>
        <tbody>
        <% @units.each do |unit| %>
            <tr>
              <td><%= link_to unit.stocknumber, unit %></td>
              <td><%= unit.make %> <%= unit.model %></td>
              <td><%= number_to_currency(unit.msrp, precision: 0) %></td>
              <td><%= number_to_currency(unit.msrp - unit.sale, precision: 0) %></td>
              <td><%= number_to_currency(unit.sale, precision: 0) %></td>
              <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
              <td><%= link_to 'Destroy', unit, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
        <tfoot>
        <tr>
          <td><%= link_to 'New Unit', new_unit_path %></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </tfoot>
      </table>
    </div>
  </div>

</div>